/* pages/eqinfo/eqview.wxss */
page{
  width: 100%;
  height: 100%;
}
.all_container{
  width: 100%;
  height: calc(100% - 30px);  
  overflow: auto;
}
.map{
  width: 100%;
  height:40%;
}
.submit_bt{
  position: absolute;
  bottom: 0px;
  left: 0px;
  display: inline-flex;
  width:100%;
}
.submit_bt button{
  width: 50%;
  height: 30px;
  font-size: 12px;
  color: white;
  background-color: rgba(16, 138, 5, 0.5);  
  border-radius: 0px 0px 0px 0px;  
  margin: 1px
}
.submit_bt button::after{
  border:0px;
}
.section{
  display: inline-flex;
  margin: 5px 5px 5px 15px;
  font-size: 12px;
  width: 90%;
  border-bottom:solid 1px rgba(16, 138, 5, 0.1);
}
.section view{
  margin-bottom: 3px;
}
.section input{
  margin-bottom: 5px;
  width:100%;
}

.section__title{
  width:80px;
}
.comp_bullet{
  width:100%;
}